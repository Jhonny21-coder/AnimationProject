.masked {
  margin-left: 20px;
}

vaadin-text-field.digit-field::part(input-field) {
  border: 0.5px solid white;
  height: 3em;
  transition: 0.6s;
  border-radius: 10px;
  background: linear-gradient(270deg, rgba(2, 29, 78, 0.681) 0%, rgba(31, 215, 232, 0.873) 60%);
}

vaadin-text-field.digit-field {
  cursor: pointer;
  width: 43px;
}

vaadin-text-field.digit-field > input {
  font-family: serif;
  color: black;
}

vaadin-text-field.digit-field:active {
  scale: 0.92;
}

vaadin-text-field.digit-field > [slot="suffix"] {
  color: #0ef;
  animation: bounce 3s none;
}

vaadin-text-field.digit-field::part(label) {
  color: white;
  font-family: serif;
}
